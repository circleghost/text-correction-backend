# Production Environment Configuration
NODE_ENV=production
PORT=3000

# JWT Configuration
JWT_SECRET=please-set-this-in-zeabur-environment-variables-minimum-32-chars
JWT_EXPIRES_IN=7d

# OpenAI API Configuration (will be set in Zeabur environment variables)
OPENAI_API_KEY=please-set-this-in-zeabur-environment-variables

# CORS Configuration - Allow frontend domain
CORS_ORIGIN=*

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# Database (optional for basic functionality)
DATABASE_URL=postgresql://dummy:dummy@localhost:5432/dummy

# Redis (optional for rate limiting)
REDIS_URL=redis://localhost:6379