# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/text_correction_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Redis Configuration (Optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Azure OpenAI Configuration (Primary)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://o1o1.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# OpenAI API Configuration (Primary)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4.1-nano

# Google Docs API Configuration (Optional)
# Method 1: JSON credentials as environment variable (recommended for production)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"...","client_email":"...","private_key":"..."}

# Method 2: Individual credential fields (alternative for production)
# GOOGLE_CLIENT_EMAIL=service-account@your-project.iam.gserviceaccount.com
# GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBgkqhkiG9w0B...\n-----END PRIVATE KEY-----
# GOOGLE_PROJECT_ID=your-google-project-id

# Method 3: File path (development only - DO NOT use in production)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/google-service-account.json

# CORS Configuration
# For local development - frontend runs on port 5173 (Vite default)
CORS_ORIGIN=http://localhost:5173
# For production - replace with your Zeabur frontend URL
# CORS_ORIGIN=https://your-frontend-domain.zeabur.app

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info