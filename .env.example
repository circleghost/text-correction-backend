# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/text_correction_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# Redis Configuration (Optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Azure OpenAI Configuration (Primary)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://o1o1.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-5-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# OpenAI API Configuration (Fallback)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Docs API Configuration (Optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-service-account.json

# CORS Configuration
# For local development - frontend runs on port 5173 (Vite default)
CORS_ORIGIN=http://localhost:5173
# For production - replace with your Zeabur frontend URL
# CORS_ORIGIN=https://your-frontend-domain.zeabur.app

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info